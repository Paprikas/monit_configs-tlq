check system localhost
  if loadavg (1min) > 4 then alert
  if loadavg (5min) > 3 then alert
  if memory usage > <%= node['monit_configs-tlq']['system']['memory_usage'] %>% then alert
  if cpu usage (user) > <%= node['monit_configs-tlq']['system']['cpu_usage_user'] %>% for 5 cycles then alert
  if cpu usage (system) > <%= node['monit_configs-tlq']['system']['cpu_usage_system'] %>% for 5 cycles then alert
  if cpu usage (wait) > <%= node['monit_configs-tlq']['system']['cpu_usage_wait'] %>% for 5 cycles then alert
  check filesystem rootfs with path /
  if space usage > <%= node['monit_configs-tlq']['system']['space_usage'] %>% then alert
